<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@mipmap/main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <RelativeLayout
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="0dp"
            android:padding="0dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/return_home"
            android:id="@+id/imageview_back"/>
        <TextView
            android:textSize="26sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textColor="@android:color/white"
            android:text="欢迎"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />
        <ImageView
            android:layout_marginLeft="0dp"
            android:padding="0dp"
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:background="@mipmap/return_right"
            android:id="@+id/imageview_back1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_tupian"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/shumeipai_bg2"
            android:scaleType="centerInside" />
    </RelativeLayout>

    <GridLayout
        android:layout_width="375dp"
        android:layout_height="243dp">
        <Button
            android:id="@+id/button1"
            android:layout_width="182dp"
            android:layout_height="108dp"
            android:startColor="#00FF00"
            android:endColor="#C0C0C0"
            android:paddingTop="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/btn_selector_shape"
            android:angle="0"
            android:text="yulan"/>
        <Button
            android:id="@+id/button2"
            android:layout_width="182dp"
            android:layout_height="108dp"
            android:startColor="#00FF00"
            android:endColor="#C0C0C0"
            android:layout_marginTop="0dp"
            android:paddingTop="5dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/btn_selector_shape"
            android:text="paizhao"/>
        <Button
            android:id="@+id/button3"
            android:layout_width="182dp"
            android:layout_height="108dp"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/btn_selector_shape"
            android:text="guanbiyulan" />
        <Button
            android:id="@+id/button4"
            android:layout_width="182dp"
            android:layout_height="108dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_selector_shape"
            android:text="imageshow" />
    </GridLayout>
    <ImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/btn_shape_round" />
</LinearLayout>