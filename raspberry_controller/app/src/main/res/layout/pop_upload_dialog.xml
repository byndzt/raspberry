<!-- res/layout/dialog_customize.xml-->
<!-- 自定义View -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#18000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_centerVertical="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@mipmap/bg_dialog"
    android:layout_height="280dp">

    <ImageView
        android:id="@+id/btn_close"
        android:padding="12dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/title"
        android:text="图像上传"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_upload_icon"
        android:layout_below="@id/title"
        android:layout_marginTop="32dp"
        android:src="@mipmap/upload_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/iv_upload_icon"
        android:id="@+id/info"
        android:text="图片上传成功"
        android:textSize="24sp"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>
</RelativeLayout>